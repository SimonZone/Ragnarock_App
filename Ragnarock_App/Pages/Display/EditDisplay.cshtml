@page
@model Ragnarock_App.EditDisplayModel
@{ ViewData["Title"] = "EditDisplay"; }

<h1>Edit Display</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.display.Id" class="control-label"></label>
        <input hidden="hidden" asp-for="@Model.display.Id" class="form-control" />
        <span asp-validation-for="@Model.display.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.Name" class="control-label"></label>
        <input asp-for="@Model.display.Name" class="form-control" />
        <span asp-validation-for="@Model.display.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.Description" class="control-label"></label>
        <input asp-for="@Model.display.Description" class="form-control" />
        <span asp-validation-for="@Model.display.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.ImageFile" class="control-label"></label>
        <input asp-for="@Model.display.ImageFile" class="form-control" />
        <span asp-validation-for="@Model.display.ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.SoundFile" class="control-label"></label>
        <input asp-for="@Model.display.SoundFile" class="form-control" />
        <span asp-validation-for="@Model.display.SoundFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>