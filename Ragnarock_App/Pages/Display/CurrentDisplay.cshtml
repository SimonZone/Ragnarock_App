@page
@model Ragnarock_App.CurrentDisplayModel
@{
    int a = Model.display.Id + 1;
    int b = Model.display.Id - 1;
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Administrator</title>
</head>

    @* skal nok ikke være her
        <h1>Administrator @Model.Brugernavn</h1>
    <a asp-page="Administrator" asp-page-handler="Logud">Logud</a>*@


<head>
    <title>@Model.display.Name</title>
</head>

<br />
<table width="100%">
    <tr>
        @*First collum*@
        <th style="text-align:center">
            <img src="~/ImageFiles/@Model.display.ImageFile" width="500" height="500">
        </th>

        @*second collum*@
        <th style="text-align:center">
            <h1>Display id: @Model.display.Id @Model.display.Name  </h1>
            <br /> @Model.display.Description
            <p s>
                @Model.display.DisplayText
            </p>

        </th>
    </tr>


    <tr>
        <th style="height:100px;vertical-align:middle;text-align:center">
            <audio controls src="~/SoundFiles/@Model.display.SoundFile">test</audio>
        </th>
        <th>
            Rating: @Model.display.Rating
            <br />
            <form method="post">
                <div class="form-group">
                    <input asp-for="@Model.display.Rating" class="form-control" />
                    <span asp-validation-for="@Model.display.Rating" class="text-danger" aria-label="Default" aria-describedby="inputGroup-sizing-default"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </th>
    </tr>
</table>

<table cellpadding="20" align="center">

    <th class="text-lg-center">
        <a href="/Display/CurrentDisplay?id=@(b)" class="previous">&laquo; Tilbage</a>
    </th>
    <th class="text-lg-center">
        <a href="/Display/CurrentDisplay?id=@(a)" class="next">Næste &raquo;</a>
    </th>
</table>
<body>
    <div class="text-md-center">
        <a asp-page="DisplayWithoutEdit" class="back">Back to all displays</a>
    </div>
</body>
