@page
@model Ragnarock_App.CurrentDisplayModel
@{
    int a = Model.display.Id + 1;
    int b = Model.display.Id - 1;
}

<style>
    th {
        border-bottom: 1px solid #ddd;
        vertical-align: top
    }
    td {

    }
    a {
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: white;
            color: black;
        }

    .previous {
        background-color: red;
        color: black;
        font-size: x-large;
        border-radius: 5px;
    }
    .back {
        background-color: yellow;
        color: black;
        border-radius: 5px;
        text-align: left;
        block-size:fit-content;
    }
    div {
        text-align: left;
        padding: 5px 5px 5px 5px;
        inline-size: 0px;
    }
    .next {
        background-color: green;
        color: black;
        font-size: x-large;
        border-radius: 5px;
    }
</style>

<head>
    <title>@Model.display.Name</title>
</head>

<br />
<table width="100%">
    <tr>
        @*First collum*@
        <th style="text-align:center">
            <img src="~/ImageFiles/@Model.display.ImageFile" width="500" height="500">
        </th>

        @*second collum*@
        <th style="text-align:center">
            <h1 >Display id: @Model.display.Id @Model.display.Name  </h1>
            <br /> @Model.display.Description
            <p s>
                @Model.display.DisplayText
            </p>

        </th>
    </tr>


    <tr>
        <th style="height:100px;vertical-align:middle;text-align:center" >
            <audio controls src="~/SoundFiles/@Model.display.SoundFile">test</audio>
        </th>
    </tr>
</table>

<table cellpadding="20" align="center">

    <th class="text-lg-center">
        <a href="/Display/CurrentDisplay?id=@(b)" class="previous">&laquo; Previous</a>
    </th>
    <th class="text-lg-center">
        <a href="/Display/CurrentDisplay?id=@(a)" class="next">&raquo; Next</a>
    </th>
</table>
<body>
    <div class="text-md-center">
        <a asp-page="GetAllDisplays" class="back">Back to all displays</a>
    </div>
</body>
