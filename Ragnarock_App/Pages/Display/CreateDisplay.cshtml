@page
@model Ragnarock_App.CreateDisplayModel

@{ 
    ViewData["Title"] = "CreateDisplay"; 
}

<h1>CreateDisplay</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.display.Id" class="control-label"> Id </label>
        <input asp-for="@Model.display.Id" class="form-control" />
        <span asp-validation-for="@Model.display.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.Name" class="control-label">Name </label>
        <input asp-for="@Model.display.Name" class="form-control" />
        <span asp-validation-for="@Model.display.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.Description" class="control-label">Description</label>
        <input asp-for="@Model.display.Description" class="form-control" />
        <span asp-validation-for="@Model.display.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.ImageFile" class="control-label">Description</label>
        <input asp-for="@Model.display.ImageFile" class="form-control" />
        <span asp-validation-for="@Model.display.ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.SoundFile" class="control-label"> SoundFile </label>
        <input asp-for="@Model.display.SoundFile" class="form-control" />
        <span asp-validation-for="@Model.display.SoundFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.display.Rating" class="control-label"> Rating </label>
        <input asp-for="@Model.display.Rating" class="form-control" />
        <span asp-validation-for="@Model.display.Rating" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>